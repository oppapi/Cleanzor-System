@page "/"

<body class="body">
  <div class="login-header">
    <span class="title">Welcome Back!</span>
    <span class="subtitle">Login to your account.</span>
  </div>

  <div class="center-screen">
    <div class="logo-container">
      <img src="images/CleanzorLogo.png" alt="Cleanzor Logo" />
    </div>
    <h2 class="centered-title">CLEANZOR</h2>
  </div>

  <div class="centered-div">
    <form class="login-form">
      <div class="form-group">
        <label for="username" class="labelBox">Username</label>
        <input type="text" id="username" @bind="txtusername" placeholder="Enter your username" class="inputBox" required autocomplete="username" />
      </div>

      <div class="form-group">
        <label for="password" class="labelBox">Password</label>
        <input type="password" id="password" @bind="txtpassword" placeholder="Enter your password" class="inputBox" required autocomplete="off" />
      </div>

      <div class="form-group show-password-group">
        <div class="show-password-left">
          <input type="checkbox" class="checkbox" id="showPassword" />
          <label for="showPassword">Show Password</label>
        </div>
        <a href="forgot.html" class="forgot-password" 
           onclick="if (typeof showLoadingAndRedirect === 'function') showLoadingAndRedirect('forgot.html'); else window.location.href = 'forgot.html'; return false;">
           Forgot Password?
        </a>
      </div>

      <button type="submit" id="submit" class="btn-login">LOGIN</button>
      <p class="text-center-white">
        Donâ€™t have an account?
        <a @onclick="GoToSignup" class="signupButton" id="signupBtn">Signup</a>
      </p>
    </form>
  </div>
</body>

